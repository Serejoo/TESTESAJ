@model IEnumerable<CFC.Models.Itens>

<table class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th width="20" align="center">Cod</th>
            <th width="100">A/D</th>
            <th width="100">Placa</th>
            <th >Item</th>
            <th width="80">Valor</th>
            <th>Fotos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itens in Model)
        {
            <tr>
                <td style="text-align:center">
                    <strong><a href="/Admin/Itens/Details/@itens.CodigoDoItem" class="color-red-dark" title="Detalhes">@itens.CodigoDoItem</a></strong>                   
                </td>
                <td>
                    @(itens.DataDaDesativacao.HasValue ? Html.Raw("D " + itens.DataDaDesativacao.Value.ToShortDateString()) : Html.Raw("A " + itens.DataDaAtivacao.Value.ToShortDateString()))
                </td>
                <td>
                    @itens.Placa1DoVeiculo
                </td>
                <td>
                    @itens.DescricaoDaMarca/@itens.DescricaoDoModelo @Html.Raw(itens.Particular ? "(Particular)" : "")
                </td>
                <td>
                    @String.Format("{0:N2}", itens.Valor)
                </td>
                <td>@Html.Raw((itens.Foto1 == null ? "-" : "1") + "/" + (itens.Foto2 == null ? "-" : "2") + "/" + (itens.Foto3 == null ? "-" : "3") + "/" + (itens.Foto4 == null ? "-" : "4"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
    
    </tfoot>
    </table>

