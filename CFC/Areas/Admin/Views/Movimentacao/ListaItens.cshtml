        $("#Gerar").on('click',function () {
                var item = $("#Itens").val();
                var cliente = $("#Cliente").val();
                var data = $("#Vencimento").val();
                var parcelas = $("#Parcelas").val();

            $.post('@Url.Action("CaixaGerado", "Movimentacao")',
            {
                cliente: cliente,
                item: item,
                data: data,
                parcelas: parcelas
            }, function (data) {
                $("#retorno").html(data);
            });
        });
    });
