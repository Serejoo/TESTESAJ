@model CFC.Models.Itens

    @{
        ViewBag.Title = "Detalhes";
        Layout = "~/Areas/Cliente/Views/Shared/_Layout.cshtml";
    }


    <div id="content" class="page-content clearfix">
        <div class="contentwrapper">
            <!--Content wrapper-->
            <div class="heading">
                <!--  .heading-->
                <h3>Veiculo</h3>
                <ul class="breadcrumb">
                    <li></li>
                    <li>
                        <a href="#" class="tip" title="voltar para home">
                            <i class="s16 icomoon-icon-screen-2"></i>
                        </a>
                        <span class="divider">
                            <i class="s16 icomoon-icon-arrow-right-3"></i>
                        </span>
                    </li>
                    <li class="active">Detalhes do Veiculo</li>
                </ul>
            </div>
            <!-- End  / heading-->
            <!-- Start .row -->
            <div class="row printable">
                <div class="col-md-12">
                    <!-- col-md-12 start here -->
                    <div class="panel panel-default invoice">
                        <div class="panel-heading clearfix">
                            <h4 class="panel-title pull-left">
                                <span>@Model.Clientes.NomeCFC</span><br/><span>@Html.Raw(Model.Particular ? "Particular" : "")</span>
                            </h4>
                            <div class="print">
                                <a href="#" class="tip" title="Imprimir"><i class="s24 icomoon-icon-print"></i></a>
                            </div>
                            <div class="invoice-info">
                                <span class="number">Código<strong class="color-red">#@Model.CodigoDoItem</strong> <br />Fipe: <strong class="color-red">@Model.CodigoFipe</strong></span>
                                <span class="data color-gray">C @Model.DataDoCadastro.Value.ToShortDateString()</span>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div class="you" style="margin-right: 100px;">
                                <ul class="list-unstyled">
                                    <li>
                                        <h5>@Model.DescricaoDoModelo</h5>
                                    </li>
                                    <li><i class="s16 icomoon-icon-arrow-right-3"></i><strong class="color-blue">Marca: </strong>@Model.DescricaoDaMarca </li>
                                    <li><i class="s16 icomoon-icon-arrow-right-3"></i><strong class="color-blue">Placa 1: </strong>@Model.Placa1DoVeiculo</li>
                                    @Html.Raw(Model.Placa2DoVeiculo == null ? "" : "<li><i class='s16 icomoon-icon-arrow-right-3'></i><strong class='color-red'>Placa 2: </strong>" + @Model.Placa1DoVeiculo + "</li>")
                                    <li><i class="s16 icomoon-icon-arrow-right-3"></i><strong class="color-blue">Renavan: </strong>@Model.Renavam</li>
                                    <li><i class="s16 icomoon-icon-arrow-right-3"></i><strong class="color-blue">Chassi: </strong>@Model.NumeroDoChassi</li>
                                    <li><i class="s16 icomoon-icon-arrow-right-3"></i><strong class="color-blue">Ano/Mod: </strong>@Model.AnoDeFabricacao / @Model.AnoDoModelo</li>
                                    <li><i class="s16 icomoon-icon-arrow-right-3"></i><strong class="color-blue">Cor: </strong>@Model.CorPredominante</li>
                                    <li><i class="s16 icomoon-icon-arrow-right-3"></i><strong class="color-green-dark">Ativado: </strong>@Model.DataDaAtivacao.Value.ToShortDateString()</li>
                                    <li><i class="s16 icomoon-icon-arrow-right-3"></i><strong class="color-green-dark">Valor/Cotas: </strong>R$ @String.Format("{0:N2}", Model.Valor) / @Html.Raw(Model.Valor/10000)</li>
                                    @Html.Raw(Model.DataDaDesativacao == null ? "" : "<li><i class='s16 icomoon-icon-arrow-right-3'></i><strong class='color-red'>Desativado: </strong>" + @Model.DataDaDesativacao.Value.ToShortDateString() + "</li>")
                                </ul>
                                <div class="col-md-12">
                                    <div class="profile-info">
                                        <button onclick="javascript: history.back();" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span> Voltar</button>                                       
                                    </div>
                                </div>
                            </div>
                            <div class="client" style="float: none">
                                <ul class="list-unstyled">
                                    <li>
                                        <h5>Fotos</h5>
                                    </li>
                                    <li>
                                        <div class="col-xs-12 col-md-5">
                                            <div class="col-xs-6 col-md-6">
                                                <a id="ufoto1" href="@Html.Raw(Model.Foto1 == null ? "/Supr/img/semimagem.png" : "/Uploads/" + Model.Foto1)" data-toggle="lightbox" class="thumbnail">
                                                    <img id="ifoto1" class="img-responsive" src="@Html.Raw(Model.Foto1 == null ? "/Supr/img/semimagem.png" : "/Uploads/" + Model.Foto1)" alt="attachment image">
                                                </a>
                                            </div>
                                            <div class="col-xs-6 col-md-6">
                                                <a id="ufoto2" href="@Html.Raw(Model.Foto2 == null ? "/Supr/img/semimagem.png" : "/Uploads/" + Model.Foto2)" data-toggle="lightbox" class="thumbnail">
                                                    <img id="ifoto2" class="img-responsive" src="@Html.Raw(Model.Foto2 == null ? "/Supr/img/semimagem.png" : "/Uploads/" + Model.Foto2)" alt="attachment image">
                                                </a>
                                            </div>
                                            <div class="col-xs-6 col-md-6">
                                                <a id="ufoto3" href="@Html.Raw(Model.Foto3 == null ? "/Supr/img/semimagem.png" : "/Uploads/" + Model.Foto3)" data-toggle="lightbox" class="thumbnail">
                                                    <img id="ifoto3" class="img-responsive" src="@Html.Raw(Model.Foto3 == null ? "/Supr/img/semimagem.png" : "/Uploads/" + Model.Foto3)" alt="attachment image">
                                                </a>
                                            </div>
                                            <div class="col-xs-6 col-md-6">
                                                <a id="ufoto4" href="@Html.Raw(Model.Foto4 == null ? "/Supr/img/semimagem.png" : "/Uploads/" + Model.Foto4)" data-toggle="lightbox" class="thumbnail">
                                                    <img id="ifoto4" class="img-responsive" src="@Html.Raw(Model.Foto4 == null ? "/Supr/img/semimagem.png" : "/Uploads/" + Model.Foto4)" alt="attachment image">
                                                </a>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="clearfix"></div>
                            @*<div class="invoice-footer">
                                <p>@Model.ObservacaoDoItem</p>
                            </div>*@
                            @*<div class="clearfix"></div>*@
                            @*<table class="table table-bordered table-striped table-hover">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Descrição</th>
                                    <th>Data</th>
                                    <th>Fechamento</th>
                                    <th>Valor</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Veiculo bateu</td>
                                    <td>01/01/2001</td>
                                    <td>01/01/2001</td>
                                    <td>R$ 50,00</td>
                                </tr>
                                </tbody>
                            </table>
                            <div class="total">
                                <h4>
                                    Total: <span class="color-red">R$ 1250.00</span>
                                </h4>
                            </div>*@
                        </div>
                    </div>
                    <!-- End .panel -->
                </div>               
                <!-- col-md-12 end here -->
            </div>
            <!-- End .row -->
        </div>
        <!-- End contentwrapper -->
    </div>
<script>
    $(document).delegate('*[data-toggle="lightbox"]', 'click', function (event) {
        event.preventDefault();
        $(this).ekkoLightbox();
    });
</script>