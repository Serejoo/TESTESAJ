@model CFC.Models.Site

<header id="header" class="fancy">
    <div class="topbar">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="topbar-left text-left">
                        <ul class="list-inline">
                            <li> <i class="fa fa-envelope-o"> </i> @Model.Email</li>
                            <li> <i class="fa fa-clock-o"></i> Seg - Sex 8:00 - 18:00</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="topbar-right text-right">
                        <ul class="list-inline">
                            <li> <i class="fa fa-phone"></i> @Model.Telefone</li>
                            <li><a href="@Model.Facebook"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="@Model.Twitter"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="@Model.Instagram"><i class="fa fa-instagram"></i></a></li>
                            <li><a href="@Model.Youtube"><i class="fa fa-youtube-play"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--=================================
     mega menu -->
    <div class="menu">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <!-- menu start -->
                    <nav id="menu" class="mega-menu">
                        <!-- menu list items container -->
                        <section class="menu-list-items">
                            <!-- menu logo -->
                            <ul class="menu-logo">
                                <li>
                                    <a href="/"><img id="logo_dark_img" src="/Site/images/logo-dark.png" alt="logo"> </a>
                                </li>
                            </ul>
                            <!-- menu links -->
                            <ul class="menu-links">
                                <!-- active class -->
                                <li class="active">
                                    <a href="/"> Home <i class="fa fa-indicator"></i></a>
                                </li>
                                @if (Model.AtivaServicos)
                                {
                                    <li>
                                        <a href="/Home/Pagina/?id=Serviços">Serviços <i class="fa fa-indicator"></i></a>
                                    </li>
                                }
                                @if (Model.AtivaVeiculos)
                                {
                                    <li>
                                        <a href="/Home/Pagina/?id=Veiculos">Veiculos <i class="fa fa-indicator"></i></a>
                                    </li>
                                }
                                @if (Model.AtivaCobertura)
                                {
                                    <li>
                                        <a href="/Home/Pagina/?id=Cobertura">Cobertura <i class="fa fa-indicator"></i></a>
                                    </li>
                                }
                                @if (Model.AtivaPreco)
                                {
                                    <li>
                                        <a href="/Home/Pagina/?id=Preço">Preço <i class="fa fa-indicator"></i></a>
                                    </li>
                                }
                                @*<li>
                                    <a href="/">Noticías <i class="fa fa-indicator"></i></a>
                                </li>*@
                                @if (Model.AtivaSobre)
                                {
                                    <li>
                                        <a href="/Home/Pagina/?id=Sobre">Sobre <i class="fa fa-indicator"></i></a>
                                    </li>
                                }
                                @if (Model.AtivaContato)
                                {
                                    <li>
                                        <a href="/Home/Pagina/?id=Contato">Contato <i class="fa fa-indicator"></i></a>
                                    </li>
                                }
                                @if (Model.AtivaLogin)
                                {
                                    <li>
                                        <a href="/Cliente"> Login <i class="fa fa-indicator"></i></a>
                                    </li>
                                }
                            </ul>
                        </section>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- menu end -->
</header>
