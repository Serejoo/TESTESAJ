@model CFC.Models.Site
@{
    ViewBag.Title = "Paginas";
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool sobre = false;
    bool contato = false;
    var texto = "";
    string pagina = ViewBag.Pagina;

    switch (pagina)
    {
        case "Sobre":
            sobre = true;
            texto = Model.SobreTexto;
            break;
        case "Cobertura":
            texto = Model.CoberturaTexto;
            break;
        case "Preço":
            texto = Model.PrecoTexto;
            break;
        case "Serviços":
            texto = Model.PrecoTexto;
            break;
        case "Veiculos":
            texto = Model.VeiculosTexto;
            break;
        case "Contato":
            contato = true;
            break;
        default:
            pagina = "CFC GRUPO";
            texto = "BEM VINDO!";
            break;
    }
    }

<!--=================================
 inner-intro -->
<section class="inner-intro bg-1 bg-overlay-black-70">
    <div class="container">
        <div class="row text-center intro-title">
            <div class="col-lg-6 col-md-6 col-sm-6 text-left">
                <h1 class="text-white">@pagina </h1>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 text-right">
                <ul class="page-breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i> Home</a> <i class="fa fa-angle-double-right"></i></li>
                    <li><a href="#">páginas</a> <i class="fa fa-angle-double-right"></i></li>
                    <li><span>@pagina</span> </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!--=================================
