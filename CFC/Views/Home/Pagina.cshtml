}
else
{
    <!--=================================
    paginas -->
    <section class="welcome-4 page-section-ptb white-bg">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-1 col-md-10">
                    <div class="section-title">
                        <h2>@pagina</h2>
                        <div class="separator"></div>
                        @if (sobre)
                        {
                            <p>
                                @Model.SobreResumo
                            </p>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                @if (sobre)
                {
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div>
                            <div class="item">
                                <img class="img-responsive" src="~/Uploads/@Model.SobreImagemEquipe" alt="">
                            </div>
                        </div>
                    </div>
                }
                <div @Html.Raw(sobre ? "class='col-lg-6 col-md-6 col-sm-6'" : "class='col-lg-12 col-md-12 col-sm-12'") >
